{
    "batch_size": 4,
    "logger": {
        "save_dir": "/nfs/home/clruben/workspace/nst/runs",
        "name": "cyclegan"
    },
    "trainer": {
        "accelerator": "gpu",
        "devices": [0],
        "precision": "bf16",
        "log_every_n_steps": 1,
        "enable_checkpointing": true,
        "max_epochs": 3
    },
    "checkpoint": {
        "save_last": true,
        "dirpath": "/nfs/home/clruben/workspace/nst/models/cyclegan/checkpoints",
        "filename": "model_checkpoint",
        "every_n_train_steps": 1000
    },
    "model": {
        "betas": [0.5, 0.999],
        "lambda_w": 10,
        "lr": 0.002,
        "accumulate_grad_batches": 4,
        "log_image_every_n_steps": 500,
        "generator": {
            "in_channels": 1,
            "out_channels": 1,
            "hid_channels": 64,
            "tanh_activation": false
        },
        "discriminator": {
            "in_channels": 1,
            "hid_channels": 64
        },
        "block_type": "CNN"
    }
}
